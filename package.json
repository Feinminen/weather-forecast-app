{
  "name": "weather-forecast-application",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0",
    "node-sass": "^7.0.1",
    "runtypes": "^6.3.0",
    "bem-cn-lite": "^4.0.0"
  },
  "devDependencies": {
    "@dxfeed/linter": "^2.1.0",
    "eslint": "^7.19.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "stylelint": "^13.13.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "postcss-scss": "^4.0.3",
    "ttypescript": "^1.5.12"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.ts{,x}\"",
    "format:check": "prettier --check \"src/**/*.ts{,x}\"",
    "lint": "eslint \"src/**/*.{j,t}s{,x}\"",
    "lint:css": "stylelint 'src/**/*.{j,t}s{,x}'",
    "typecheck": "ttsc --build tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn typecheck"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "lint-staged": {
    "{src,types}/**/*.{ts,tsx}": [
      "stylelint",
      "eslint --fix",
      "prettier --write"
    ],
    "{src,types,scripts}/**/*.{json,js,css}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@dxfeed/linter/standarts/js/default.js"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "error",
      "@typescript-eslint/no-implicit-any": "error"
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
